ğŸ“ ~/scripts/theme-switch.sh
selected=$(echo -e "tokyonight-storm\ntokyonight-night\ntokyonight-day" | rofi -dmenu -p "Choose Theme")
if [ "$selected" ]; then
  nwg-look -t ~/.themes/$selected
  killall waybar && waybar &
fi


